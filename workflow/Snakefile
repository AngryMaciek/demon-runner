# import required modules/packages
import os

# define local rules
localrules: all, mock

rule all:
    """
    Target rule with final output of the workflow
    """
    input:
        TXT_echo = expand(
            os.path.join(
                "{outdir}",
                "echo.txt"
            ),
            outdir = config["outdir"]
        )

rule mock:
    """
    Mock rule
    """     
    output:
        TXT_echo = os.path.join(
            "{outdir}",
            "echo.txt"
        )

    shell:
        """
        echo HELLOWORLD 1> {output.TXT_echo}
        """
